{
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"hosting": {
		"site": "phungible-app",
		"public": "build",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		],
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		],
		"headers": [
			{
				"source": "**/*.@(jpg|jpeg|gif|png|svg)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, max-age=86400"
					},
					{
						"key": "Content-Encoding",
						"value": "gzip"
					}
				]
			},
			{
				"source": "**/*.@(js|css)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, max-age=31536000"
					},
					{
						"key": "Content-Encoding",
						"value": "gzip"
					}
				]
			},
			{
				"source": "index.html",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, max-age=300, s-maxage=600"
					},
					{
						"key": "Content-Encoding",
						"value": "gzip"
					}
				]
			},
			{
				"source": "ngsw.json",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=0"
					}
				]
			},
			{
				"source": "combined-sw.js",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=0"
					}
				]
			},
			{
				"source": "ngsw-worker.js",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=0"
					}
				]
			},
			{
				"source": "firebase-messaging-sw.js",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=0"
					}
				]
			},
			{
				"source": "manifest.webmanifest",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=0"
					}
				]
			}
		]
	},
	"functions": {
		"predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
	}
}
