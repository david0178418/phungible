{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "outDir": "./build/",
        "sourceMap": true,
        "lib": [
            "dom",
            "es5",
            "es2015.promise",
            "scripthost"
        ],
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "alwaysStrict": true,
        "strictNullChecks": false,
        "target": "ES5",
        "jsx": "react",
        "resolveJsonModule": true
    },
    "include": [
        "./**/*"
    ]
}
