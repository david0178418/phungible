{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "outDir": "./build/client/",
        "sourceMap": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "alwaysStrict": true,
        "strictNullChecks": false,
        "target": "ES6",
        "jsx": "react"
    },
    "include": [
        "./**/*"
    ]
}
